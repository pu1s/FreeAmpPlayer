<UserControl x:Name="freeampTrackBarControl" x:Class="freeampcontrols.freeampTrackBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:freeampcontrols"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="300">
    <Border SnapsToDevicePixels="True">
        <Slider x:Name="slider" Margin="0" Style="{DynamicResource SimpleSlider}" LargeChange="10" IsMoveToPointEnabled="True" VerticalAlignment="Center" Value="2"/>

    </Border>
</UserControl>
