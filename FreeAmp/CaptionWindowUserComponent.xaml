<UserControl x:Class="FreeAmp.CaptionWindowUserComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FreeAmp"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300" Width="350">
    <Grid Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="IconWindow" Width="30"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
            <ColumnDefinition Name="DeactivateWindow" Width="50"/>
            <ColumnDefinition Name="ResizeWindow" Width="50"/>
            <ColumnDefinition Name="CloseWindow" Width="50"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="MenuButton" Content="Button" Grid.Column="1" Margin="0" BorderThickness="0" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}"/>
        <Image x:Name="image" Height="30" Width="30"/>
        <Label x:Name="label" Content="Label" Grid.Column="2" Margin="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

    </Grid>
</UserControl>
