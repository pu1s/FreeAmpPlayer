<UserControl x:Class="FreeAmp.UIComponents.CommandButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FreeAmp.UIComponents"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30">
    
  <Border BorderThickness="1" BorderBrush="{StaticResource BlueColorBrush}">
     
         <Button>
             <Button.Content>
                 <Grid>
                    <Path Data="M9,5 L0,1 L9,8 L0,5 Z" Stroke="Blue"></Path>
                 </Grid>
             </Button.Content>
         </Button>
    
  </Border>
   
</UserControl>
